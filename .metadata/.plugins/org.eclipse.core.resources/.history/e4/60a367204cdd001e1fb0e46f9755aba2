		lblTaiKhoan.setHorizontalAlignment(SwingConstants.CENTER);
		lblTaiKhoan.setBounds(0, 0, 218, 43);
		pnlTaiKhoan.add(lblTaiKhoan);
		
		JPanel pnl = new JPanel();
